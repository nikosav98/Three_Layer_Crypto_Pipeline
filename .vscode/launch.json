{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
    "configurations": [
    {
        "name": "Python Debugger: Server IP: 127.0.0.1 Port 3000",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/src/secure_server.py",
        "args": ["127.0.0.1", "3000"],
        "console": "integratedTerminal"
    },  
    {
        "name": "Python Debugger: Client IP: 127.0.0.1 Port 3000",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/src/secure_client.py",
        "args": ["127.0.0.1", "3000"],
        "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    }
  ]
}
